@model IEnumerable<Info.Models.Article>
@using Info.Models;

@{
    ViewData["Title"] = "New articles";
}

<div class="row">
    @{
        int count = 0;
    }
    @foreach (var item in Model)
    {

        var divClass = "col-md-4";
        if (count < 2)
        {
            divClass = "col-md-6";
        }
        <div class="@divClass">
            <div class="row content">   
                <div class="col-xs-3">
                    <div class="app-logo-container">
                        <img src="@Html.DisplayFor(modelItem => item.AppID.Icon)" />
                    </div>
                    <div class="app-platform">
                        <span class="icon icon-@item.AppID.Platform.ToString().ToLower()"></span>
                    </div>

                </div>
                <div class="col-xs-9">
                    <h2>
                        @Html.DisplayFor(modelItem => item.Title)
                    </h2>
                    <time>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </time>

                    <div class="description">
                        @Html.DisplayFor(modelItem => item.Description)
                    </div>

                    @*@Html.DisplayFor(modelItem => item.Content)*@
                    <div class="like">
                        @Html.DisplayFor(modelItem => item.Like)
                    </div>
                    <a href="@Html.DisplayFor(modelItem => item.AppID.UrlMarket)">Link</a>
                    <a class="detail" asp-action="Details" asp-route-id="@item.ID"></a>
                </div>
            </div>
        </div>
        count++;
    }
    </div>
