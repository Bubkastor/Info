@model Info.Models.Article
@using Info.Models;
@{
    ViewData["Title"] = "Create news";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>News</h4>
        <hr />
        <div class="form-group">
            <label class="col-lg-2 control-label" for="hobies">Platform</label>
            <div class="col-lg-10">
                @Html.DropDownList("Category")
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="hobies">App name</label>
            <div class="col-lg-10">
                @Html.DropDownList("AppName")
                <input id="CityName"/>
                <script>
                    $(document).ready(function () {
                        $("#CityName").autocomplete({
                            source: function (request, response) {
                                $.ajax({
                                    url: "/Articles/Index",
                                    type: "POST",
                                    dataType: "json",
                                    data: { Prefix: request.term },
                                    success: function (data) {
                                        response($.map(data, function (item) {
                                            return { label: item.Name, value: item.Name };
                                        }))

                                    }
                                })
                            },
                            messages: {
                                noResults: "", results: ""
                            }
                        });
                    }) 
                </script>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
